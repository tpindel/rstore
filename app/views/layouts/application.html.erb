<!DOCTYPE html>
<html>
<head>
  <title>Rstore</title>
  <%= stylesheet_link_tag    "rstore", :media => "all" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tags %>
</head>
<body id="store" >
	<div id="banner">
    	<%= image_tag("rails.png") %>
    	<%= @page_title || "Rails training" %>
	</div>
	<div id="columns">
		<div id="side">
          <div id="cart">
            <%= render @cart %>
          </div>
	      <a href="/">Home</a><br />
	      <a href="/products/">Products</a><br />
		</div>
		<div id="main">
			<%= yield %>
    	</div>
  	</div>
</body>
</html>
